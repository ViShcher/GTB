# .env.example — пример окружения проекта Fitness Bot TG

# Токен Telegram-бота (из BotFather)
BOT_TOKEN=0000000000:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Публичный домен Railway или другой платформы деплоя (без https://)
RAILWAY_PUBLIC_DOMAIN=gtb-production.up.railway.app

# Путь вебхука (только путь, без домена)
# Например, при Railway_PUBLIC_DOMAIN=gtb-production.up.railway.app
# полный вебхук получится https://gtb-production.up.railway.app/webhook/ShlaSaSha
WEBHOOK_PATH=webhook/ShlaSaSha

# Строка подключения к базе данных
# SQLite для локалки или PostgreSQL для Railway
DATABASE_URL=sqlite+aiosqlite:///./db.sqlite3
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# Уровень логирования
LOG_LEVEL=INFO

# Необязательный секрет для проверки запросов вебхука
# WEBHOOK_SECRET=your-secret-string
